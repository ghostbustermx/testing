@Scripts.Render("~/bundles/AdjustUI")

@{
    Layout = null;
}

<div class="right_col" role="main">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">

                    <div class="col-md-8 col-sm-5 col-xs-12">
                        <h2>Backups<small>Register of all backups</small></h2>
                    </div>

                  
                    <div class="clearfix"></div>
                </div>

                @* Here start the content*@
            <div class="x_content">


                <div class="col-md-12 col-sm-12 col-xs-12">



                    <div class="form-group row">

                        <div class="col-md-1 col-sm-4 col-xs-4 selectCustom">
                            <select name="priority" required class="form-control" ng-model="RowsSelected" ng-change="changeValue(RowsSelected)"
                                    ng-options="option as option for option in Options"></select>
                        </div>

                        <div class="col-md-3 col-sm-8 col-xs-8">
                            <div class="input-group">
                                <input auto-focus ng-model="filter.Name" type="text" class="form-control" id="filter" autocomplete="off" placeholder="Search">
                                <span class="input-group-btn">
                                    <button class="btn btn-default filterButton" type="button"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-8 col-sm-12 col-xs-12" align="right">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button" data-toggle="modal" data-target="#modalRegisterForm"><i class="fa fa-hdd-o"></i> Generate Backup</button>
                            </span>

                        </div>
                    </div>
                </div>


            </div>

                <table class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">

                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 218px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Name</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 340px;" aria-label="Description: activate to sort column ascending">Description</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 167px;" aria-label="Developer Assigned: activate to sort column ascending">Status</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 92px;" aria-label="Tester Assigned: activate to sort column ascending">Generated by</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 92px;" aria-label="Tester Assigned: activate to sort column ascending">Creation Date</th>

                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 92px;" aria-label="Actions: activate to sort column ascending">Actions</th>
                    </thead>
                    <tbody>
                        <tr role="row" class="odd" dir-paginate="backup in filteredArray = (backups | filter: filter:strict) | itemsPerPage: pageSize" current-page="currentPage" pagination-id="pagination">

                            <td tabindex="0" class="sorting_1">{{backup.Name}}</td>
                            <td>{{backup.Description}}</td>
                            <td class="even pointer">
                                <div ng-if="backup.Status">
                                    <a tooltips tooltip-template="{{backup.Message}}"><i class="fa fa-2x fa-check-circle successLabel"></i></a>
                                </div>
                                <div ng-if="!backup.Status">

                                    <a tooltips tooltip-template="{{backup.Message}}"><i class="fa fa-2x fa-times-circle errorLabel"></i></a>
                                </div>

                            </td>
                            <td>{{backup.GeneratedBy}}</td>
                            <td>{{backup.Creation_Date}}</td>

                            <td>
                                <div ng-if="backup.Status" class="btn-group">

                                    <button class="btn btn-sm btn-default" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Trash" ng-click="downloadFile(backup.Name)"><i class="fa fa-download"></i></button>
                                </div>
                            </td>
                        </tr>
                        <tr ng-if="filteredArray.length===0">
                            <td colspan="6">@Resource.NoDataFound</td>
                        </tr>

                    </tbody>
                </table>
                <div class="dataTables_info" id="datatable-buttons_info" role="status" aria-live="polite">
                    {{filteredArray.length}} entries
                </div>
                <div class="paginationContainer">
                    <dir-pagination-controls boundary-links="true" pagination-id="pagination" template-url="Pages/dirPagination.tpl.html"></dir-pagination-controls>
                </div>
            </div>
                @* Here end the content*@

            </div>
        </div>
    </div>

<div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Generate Backup</h4>
            </div>

            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <label data-error="wrong" data-success="right" class="modalField">Description:</label>
                    <br>
                    <textarea class="modalTextArea" ng-model="description" name="description" maxlength="100" ng-maxlength="100" data-success="right"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" ng-click="generateBackup(description)" data-dismiss="modal">Generate</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="loadingModalBackup" tabindex="-1" role="dialog" aria-labelledby="loadingModalLabel" aria-hidden="true">
    <div class="modal-dialog modalCenter" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="loader"></div>
                <div class="loader-txt"><p>Generating <b>Backup</b></p></div>
            </div>
        </div>
    </div>
</div>