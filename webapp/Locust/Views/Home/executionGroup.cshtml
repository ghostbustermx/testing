
@Scripts.Render("~/bundles/AdjustUI")

@{
    Layout = null;
}

<div class="right_col" role="main">
    <div class="clearfix"></div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item" ng-click="projectDetails()"><a href="" ng-click="projectDetails()">{{Name}}</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                Execution Groups
            </li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">

                    <div class="col-md-8 col-sm-5 col-xs-12">
                        <h2>Execution Groups</h2>
                    </div>


                    <div class="clearfix"></div>
                </div>

                @* Here start the content*@
                <div class="x_content">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group row">

                            <div class="col-md-1 col-sm-4 col-xs-4 selectCustom">
                                <select name="priority" required class="form-control" ng-model="RowsSelected" ng-change="changeValue(RowsSelected)"
                                        ng-options="option as option for option in Options"></select>
                            </div>
                            <div class="col-md-3 col-sm-8 col-xs-8">
                                <div class="input-group">
                                    <input auto-focus ng-model="filter" type="text" class="form-control" id="filter" autocomplete="off" placeholder="Search">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default filterButton" type="button"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-8 col-sm-12 col-xs-12" align="right">
                                <span>
                                    <button ng-if="CurrentUserRole!='VBP' && CurrentUserRole!='BA'" class="btn btn-default" type="button" data-toggle="modal" data-target="#SelectFiltered" ><i class="fa fa-globe"></i> Add Execution Group</button>
                                </span>
                                <span>
                                    <button class="btn btn-default" type="button" ng-click="goToInactiveGroups()"><i class="fa fa-globe"></i> Inactive Groups</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">

                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 218px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Name</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 340px;" aria-label="Description: activate to sort column ascending">Description</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 92px;" aria-label="Actions: activate to sort column ascending">Actions</th>
                    </thead>
                    <tbody>
                        <tr role="row" class="odd" dir-paginate="group in filteredArray = (ExecutionGroupsArray | ExecutionGroups: filter )| itemsPerPage: pageSize" current-page="currentPage" pagination-id="pagination">
                            <td ng-click="goToDetails(group.Execution_Group_Id)">{{group.Name}}</td>
                            <td ng-click="goToDetails(group.Execution_Group_Id)">{{group.Description}}</td>
                            <td style="text-align: center;">
                                <div class="btn-group" style="align-content:center;">
                                    <button class="btn btn-sm btn-default" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Trash" ng-click="goToDetails(group.Execution_Group_Id,group.isAutomated)"><span class="fa fa-tasks"></span></button>
                                    <button ng-if="CurrentUserRole!='VBP' && CurrentUserRole!='BA'" class="btn btn-sm btn-default" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Trash" ng-click="goToEditGroup(group.Execution_Group_Id,group.isAutomated)"><i class="fa fa-pencil"></i></button>
                                    <button class="btn btn-sm btn-default" ng-disabled="download" type="button" data-toggle="modal" ng-click="GetTestExecutions(group.Execution_Group_Id)"> <i class="fa fa-download"></i></button>
                                    <button ng-if="CurrentUserRole!='VBP' && CurrentUserRole!='BA'" data-toggle="modal" data-target="#modalForm" class="btn btn-sm btn-default" type="button" data-placement="top" data-original-title="Trash" ng-click="selectGroup(group)"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>
                        </tr>
                        <tr ng-if="filteredArray.length===0">
                            <td colspan="5">@Resource.NoDataFound</td>
                        </tr>
                    </tbody>
                </table>

                <div class="dataTables_info" id="datatable-buttons_info" role="status" aria-live="polite">
                    {{filteredArray.length}} entries
                </div>
                <div class="paginationContainer">
                    <dir-pagination-controls boundary-links="true" pagination-id="pagination" template-url="Pages/dirPagination.tpl.html"></dir-pagination-controls>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Disable Execution Group</h3>
            </div>
            <div class="modal-body">
                <p style="overflow:hidden">Are you sure you want to disable the group: <strong>{{SelectName}}</strong>?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal" ng-click="DisableGroup()">Disable</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="Download" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Download Report</h3>
            </div>
            <div class="modal-body" style="max-height:700px; width:100%;">
                <div class="message" ng-if="optionSelected=='Empty Report'">By selecting Empty Report, the report will not include any execution evidence</div>
                <div class="message" ng-if="optionSelected!='Empty Report'">By selecting last execution, the report will contain information on the last test execution</div>
                <form name="form" autocomplete="off" id="form" novalidate class="form-horizontal form-label-left" align="right" style="border:0">

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-1" for="Tester">
                            Select an option: <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-lg-9">
                            <select name="priority" required class="form-control" ng-model="optionSelected"
                                    ng-options="option.Test_Execution_Id as option.Name for option in Options2">
                                <option value="">Choose an option</option>
                                {{optionSelected.Name}}
                            </select>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" ng-click="downloadFileExcel()">Confirm</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="loadingModalProjectReport" tabindex="-1" role="dialog" aria-labelledby="loadingModalLabel" aria-hidden="true">
    <div class="modal-dialog modalCenter" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="loader"></div>
                <div class="loader-txt">
                    {{message}}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="SelectFiltered" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Select a Type of Execution</h3>
            </div>
            <div class="modal-body">
                <form name="form" autocomplete="off" id="form" novalidate class="form-horizontal form-label-left" align="right" style="border:0">

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-1" for="Tester">
                            Select an option: <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-lg-9">
                            <select name="priority" required class="form-control" ng-model="TypeSelected"
                                    ng-options="option as option for option in TypesOfExecution">
                                Choose An Option
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" data-dismiss="modal" ng-click="AddExecutionGroup()">Select</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
