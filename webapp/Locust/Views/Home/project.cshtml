@Scripts.Render("~/bundles/AdjustUI")

@{
    Layout = null;
}

<div class="right_col" role="main">
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">

                    <div class="col-md-8 col-sm-5 col-xs-12">
                        <h2>Projects<small>Register of all projects</small></h2>
                    </div>


                    <div class="clearfix"></div>
                </div>

                @* Here start the content*@
                <div class="x_content">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group row">

                            <div class="col-md-1 col-sm-4 col-xs-4 selectCustom">
                                <select name="priority" required class="form-control" ng-model="RowsSelected" ng-change="changeValue(RowsSelected)"
                                        ng-options="option as option for option in Options">
                                </select>
                            </div>

                            <div class="col-md-3 col-sm-8 col-xs-8">
                                <div class="input-group">
                                    <input auto-focus ng-model="filter" type="text" class="form-control" id="filter" autocomplete="off" placeholder="Search">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default filterButton" type="button"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-8 col-sm-12 col-xs-12" align="right">
                                <span ng-if="hasPermissionProject">
                                    <button class="btn btn-default" type="button" ui-sref="projectAdd"><i class="fa fa-globe"></i> Add Project</button>
                                </span>
                                <span ng-if="hasPermissionProject">
                                    <button class="btn btn-default" type="button" ui-sref="projectActivate"><i class="fa fa-folder-open"></i> Inactive Projects</button>
                                </span>
                            </div>
                        </div>
                    </div>

                </div>
                <table class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">

                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 218px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Image</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 340px;" aria-label="Description: activate to sort column ascending">Project</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 167px;" aria-label="Developer Assigned: activate to sort column ascending">Description</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 92px;" aria-label="Actions: activate to sort column ascending">Actions</th>
                    </thead>
                    <tbody>
                        <tr role="row" class="odd" dir-paginate="project in filteredArray = (projects | PROJFilter: filter )| itemsPerPage: pageSize" current-page="currentPage" pagination-id="pagination">
                            <td valign="middle" align="center" width="10%" tabindex="0" class="sorting_1" ng-click="projectDetails(project.Id)">
                                <img class="tableImage" ng-src="~/Content/img/{{project.Image}}">
                            </td>
                            <td valign="middle" width="30%" ng-click="projectDetails(project.Id)">{{project.Name}}</td>

                            <td class="description" valign="middle" width="50%" ng-click="projectDetails(project.Id)"><p>{{project.Description}}</p></td>

                            <td valign="middle" width="20%">
                                <div class="btn-group">

                                    <button class="btn btn-sm btn-default" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Trash" ui-sref="projectDetails({id:project.Id})"><i class="fa fa-info-circle"></i></button>
                                    <button ng-if="hasPermissionProject" class="btn btn-sm btn-default" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Trash" ui-sref="projectEdit({id:project.Id})"><i class="fa fa-pencil"></i></button>
                                    <button class="btn btn-sm btn-default" ng-disabled="download" type="button" data-toggle="modal"  ng-click="SetProject(project.Id,project.Name)"><i class="fa fa-download"></i></button>

                                </div>
                            </td>
                        </tr>
                        <tr ng-if="filteredArray.length===0">
                            <td colspan="5">@Resource.NoDataFound</td>
                        </tr>


                    </tbody>
                </table>
                <div class="dataTables_info" id="datatable-buttons_info" role="status" aria-live="polite">
                    {{filteredArray.length}} entries
                </div>
                <div class="paginationContainer">
                    <dir-pagination-controls boundary-links="true" pagination-id="pagination" template-url="Pages/dirPagination.tpl.html"></dir-pagination-controls>
                </div>
            </div>
            @* Here end the content*@

        </div>
    </div>
</div>

<div class="modal fade" id="loadingModalProjectReport" tabindex="-1" role="dialog" aria-labelledby="loadingModalLabel" aria-hidden="true">
    <div class="modal-dialog modalCenter" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="loader"></div>

                <div class="loader-txt"><p>{{message}}</p></div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="Download" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Download Report</h3>
            </div>
            <div class="modal-body" style="max-height:700px; width:100%;">
                <div class="message" ng-if="optionSelected=='Empty Report'">By selecting Empty Report, the report will not include any execution evidence</div>
                <div class="message" ng-if="optionSelected!='Empty Report'">By selecting last execution, the report will contain information on the last test execution</div>
                <form name="form" autocomplete="off" id="form" novalidate class="form-horizontal form-label-left" align="right" style="border:0">

                    <div class="form-group">
                        <label class="control-label col-md-2 col-sm-2 col-xs-1" for="Tester">
                            Select an option: <span class="required">*</span>
                        </label>
                        <div class="col-md-4 col-sm-4 col-lg-9">
                            <select name="priority" required class="form-control" ng-model="optionSelected"
                                    ng-options="option as option for option in Options2">
                                Choose An Option
                            </select>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" ng-click="downloadFileExcel()">Confirm</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>