<div ng-controller="EmployeeInfoController" class="container body">
    <div class="main_container">
        <div class="col-md-3 left_col menu_fixed">
            <div class="left_col scroll-view">
                <div class="navbar nav_title gradient-box" style="border: 0;">
                    <a href="/" ng-click="states.activeItem=1" class="site_title inclusive"><i class="fa fa-bug inclusive"></i> <span class="tile-app">  LOCUST</span></a>
                </div>
                <div class="clearfix"></div>
                <!-- menu profile quick info -->
                <div class="profile clearfix">
                    @*<div class="profile_pic">
                <img src="images/img.jpg" alt="..." class="img-circle profile_img">
            </div>*@
                </div>
                <!-- /menu profile quick info -->
                <br />
                <!-- sidebar menu -->
                <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                    <div class="menu_section">
                        <h3>General</h3>
                        <ul class="nav side-menu">
                            <li ng-if="item.hasPermission" ng-repeat="item in items" ng-class="{'active': item.id == states.activeItem}" ng-click="states.activeItem=item.id">
                                <a ui-sref="{{item.ref}}"><i class="{{item.icon}}"></i>  {{item.title}} </a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="sidebar-footer hidden-small">
                    <a ui-sref="Profile" data-toggle="tooltip" data-placement="top" title="" data-original-title="Settings">
                        <span class="fa fa-cog" aria-hidden="true"></span>
                    </a>
                    <a class="btnUtil" ng-click="SetStyle()" data-toggle="tooltip" data-placement="top" title="" data-original-title="Theme">
                        <span class="fa fa-adjust" aria-hidden="true"></span>
                    </a>

                    <a ng-click="FullScreen()" data-toggle="tooltip" data-placement="top" title="" data-original-title="FullScreen">
                        <span class="fa fa-arrows-alt" aria-hidden="true"></span>
                    </a>
                    <a ng-click="CopyURL()" data-toggle="tooltip" data-placement="top" title="" data-original-title="Copy">
                        <span class="fa fa-link" aria-hidden="true"></span>
                    </a>

                </div>

                <!-- /sidebar menu -->
            </div>
        </div>
        <!-- top navigation -->

        <div class="top_nav">
            <div class="nav_menu">
                <nav>
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                    </div>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="">
                            <a class="user-profile" aria-expanded="false">
                                <!--href="javascript:;">-->
                                <img ng-src="{{info.PhotoUrl}}" alt="">{{info.FirstName}} {{info.LastName}} <strong>({{info.Role}})</strong>
                            </a>
                            <!--
                            <ul class="dropdown-menu dropdown-usermenu pull-right">
                                <li><a href="javascript:;"> Profile</a></li>
                                <li>
                                    <a href="javascript:;">
                                        <span class="badge bg-red pull-right">50%</span>
                                        <span>Settings</span>
                                    </a>
                                </li>
                                <li><a href="javascript:;">Help</a></li>
                                <li><a href="login.html"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                            </ul>
                                -->
                        </li>

                    </ul>
                </nav>
            </div>
        </div>

        <div id="loading-bar-container"></div>
        <div ui-view  id="hila">
        </div>

    </div>
    <!-- footer content -->
    <footer>
        <div class="pull-left">
            @String.Format(Resource.CopyRight, DateTime.Today.Year)
        </div>
        <div class="pull-right">
            @Resource.VersionName @String.Format(Resource.Version, ViewContext.Controller.GetType().Assembly.GetName().Version)
        </div>
        <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->

</div>
<toast></toast>

@Scripts.Render("~/bundles/template")

