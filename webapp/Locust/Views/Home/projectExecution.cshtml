
@Scripts.Render("~/bundles/AdjustUI")

@{
    Layout = null;
}

<div class="right_col" role="main">
    <div class="clearfix"></div>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item" ng-click="projectDetails()"><a href="" ng-click="projectDetails()">{{Name}}</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                Execution Results
            </li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">

            <div class="x_panel">
                <div class="x_title">

                    <div class="col-md-8 col-sm-5 col-xs-12">
                        <h2>Execution Results</h2>
                    </div>


                    <div class="clearfix"></div>
                </div>

                @* Here start the content*@
                <div class="x_content">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group row">

                            <div class="col-md-1 col-sm-4 col-xs-4 selectCustom">
                                <select name="priority" required class="form-control" ng-model="RowsSelected" ng-change="changeValue(RowsSelected)"
                                        ng-options="option as option for option in Options"></select>
                            </div>


                            <div class="col-md-2 col-sm-6 col-xs-6 selectCustom" style="padding-left:10px;">
                                <select name="priority" required class="form-control" ng-model="FilterSelected" ng-change="applyFilter()"
                                        ng-options="option as option for option in Options3"></select>
                            </div>

                            <div class="col-md-2 col-sm-6 col-xs-6 selectCustom" style="padding-left:10px;">
                                <select name="priority" required class="form-control" ng-model="ExecutionSelected" ng-change="ChangeExecution(ExecutionSelected)"
                                        ng-options="option as option.Name for option in Options2"></select>
                            </div>

                           

                            <div class="col-md-3 col-sm-8 col-xs-8">
                                <div class="input-group">
                                    <input auto-focus ng-model="filter" type="text" class="form-control" id="filter" autocomplete="off" placeholder="Search">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default filterButton" type="button"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>


                        </div>
                        <div class="row tile_count">
                            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                                <span class="count_top"><i class="fa fa-file-o"></i> Total Evidence</span>
                                <div class="count"> {{Total}}</div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                                <span class="count_top"><i class="fa fa-clock-o"></i> Test Strategy</span>
                                <div class="count">{{Strategy}}</div>
                            </div>

                            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                                <span class="count_top"><i class="fa fa-check-circle"></i> Total Passed</span>
                                <div class="count">{{Passed}}</div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                                <span class="count_top"><i class="fa fa-times-circle"></i> Total Failed</span>
                                <div class="count">{{Failed}}</div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                                <span class="count_top"><i class="fa fa-warning"></i> Total To Be Executed</span>
                                <div class="count">{{TBE}}</div>
                            </div>
                            <div class="col-md-2 col-sm-4 col-xs-6 tile_stats_count">
                                <span class="count_top"><i class="fa fa-pie-chart"></i> Distribution</span><br />
                                <span class="count_bottom"><i class="successLabel"><i class="fa fa-sort-asc"></i> {{PercentagePassed}}% </i> Passed</span><br />
                                <span class="count_bottom"><i style="color:#5A738E;"><i class="fa fa-sort"></i> {{PercentageTBE}}% </i> To Be Executed</span><br />
                                <span class="count_bottom"><i class="errorLabel"><i class="fa fa-sort-desc"></i> {{PercentageFailed}}% </i> Failed</span><br />
                            </div>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">

                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 50px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">ID</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 340px;" aria-label="Description: activate to sort column ascending">Title</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 50px;" aria-label="Description: activate to sort column ascending">Tester</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 120px;" aria-label="Description: activate to sort column ascending">Execution Date</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 500px;" aria-label="Description: activate to sort column ascending">Result</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 92px;" aria-label="Actions: activate to sort column ascending">Status</th>
                    </thead>
                    <tbody>
                        <tr ng-init="GetTestExecutions(projectId)" role="row" class="odd" dir-paginate="result in filteredArray = (ResultsList | TestResults: filter )| itemsPerPage: pageSize" current-page="currentPage" pagination-id="pagination">
                            <td><p onmouseover='this.style.textDecoration="underline"' onmouseout='this.style.textDecoration="none"' ng-click="GoToEvidenceDetails(result)"><strong>{{result.Identifier_number}}</strong></p></td>
                            <td>{{result.Title}}</td>
                            <td>
                                <div ng-if="result.Status!='TBE'">{{result.Tester}}</div>
                                <div ng-if="result.Status=='TBE'">To Be Executed</div>
                            </td>
                            <td>
                                <div ng-if="result.Status!='TBE'">{{result.Execution_Date}}</div>
                                <div ng-if="result.Status=='TBE'">To Be Executed</div>
                            </td>
                            <td style="word-break:break-all;">
                                <div ng-if="result.Status!='TBE'">
                                    <div ng-show="result.viewExpected">
                                        <a ng-show="result.Execution_Result.length>=300"><i style="float:right; padding:5px, 5px,5px,5px;" class="fa fa-chevron-up" ng-click="ViewExpected(result,!result.viewExpected)"></i> </a>
                                        <p class="message">{{result.Execution_Result}}</p>

                                    </div>
                                    <div ng-show="!result.viewExpected">
                                        <a ng-click="ViewExpected(result,!result.viewExpected)">Show Execution Result <i style="float:right; padding:5px,5px,5px,5px;" class="fa fa-chevron-down"></i> </a>
                                    </div>

                                </div>
                                <div ng-if="result.Status=='TBE'">To Be Executed</div>
                            </td>

                            <td>
                                <div ng-if="result.Status=='Pass'">
                                    <a><i class="fa fa-2x fa-check-circle successLabel"></i></a>
                                </div>
                                <div ng-if="result.Status=='Fail'">

                                    <a><i class="fa fa-2x fa-times-circle errorLabel"></i></a>
                                </div>
                                <div ng-if="result.Status=='TBE'">

                                    <a><i class="fa fa-2x fa-exclamation-circle "></i></a>
                                </div>
                            </td>

                        </tr>
                        <tr ng-if="filteredArray.length===0">
                            <td colspan="6">@Resource.NoDataFound</td>
                        </tr>
                    </tbody>
                </table>

                <div class="dataTables_info" id="datatable-buttons_info" role="status" aria-live="polite">
                    {{filteredArray.length}} entries
                </div>
                <div class="paginationContainer">
                    <dir-pagination-controls boundary-links="true" pagination-id="pagination" template-url="Pages/dirPagination.tpl.html"></dir-pagination-controls>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Disable Execution Group</h3>
            </div>
            <div class="modal-body">
                <p style="overflow:hidden">Are you sure you want to disable the group: <strong>{{SelectName}}</strong>?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-dismiss="modal" ng-click="DisableGroup()">Disable</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="loadingModalProjectReport" tabindex="-1" role="dialog" aria-labelledby="loadingModalLabel" aria-hidden="true">
    <div class="modal-dialog modalCenter" role="document">
        <div class="modal-content">
            <div class="modal-body text-center">
                <div class="loader"></div>
                <div class="loader-txt">
                    {{message}}
                </div>
            </div>
        </div>
    </div>
</div>
