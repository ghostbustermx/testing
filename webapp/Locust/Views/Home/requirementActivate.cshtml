@Scripts.Render("~/bundles/AdjustUI")

@{
    Layout = null;
}

<div class="right_col" role="main">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item" ng-click="projectDetails()"><a href="" ng-click="projectDetails()">{{projectName}}</a></li>
            <li class="breadcrumb-item active" aria-current="page">Inactive Requirements</li>
        </ol>
    </nav>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">

                    <div class="col-md-8 col-sm-5 col-xs-12">
                        <h2>Inactive Requirements<small>Register of all inactive requirements</small></h2>
                    </div>
                    <div class="clearfix"></div>
                </div>

                @* Here start the content*@
                <div class="x_content" align="right">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group row">
                            <div class="col-md-1 col-sm-4 col-xs-4 selectCustom">
                                <select name="priority" required class="form-control" ng-model="RowsSelected" ng-change="changeValue(RowsSelected)"
                                        ng-options="option as option for option in Options"></select>
                            </div>

                            <div class="col-md-3 col-sm-8 col-xs-8">
                                <div class="input-group">
                                    <input auto-focus ng-model="filterREQ" type="text" class="form-control" id="filter" autocomplete="off" placeholder="Search">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default filterButton" type="button"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-8 col-sm-12 col-xs-12" align="right">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button" ng-click="projectDetails()"><i class="fa fa-arrow-left" aria-hidden="true"></i> Active Requirements</button>
                                </span>
                            </div>
                        </div>
                    </div>



                </div>
                <table style="overflow:hidden" class="table table-striped table-bordered dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable-buttons_info">

                    <thead>
                        <tr role="row">
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 218px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Axosoft ID</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 218px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Number</th>
                            <th class="sorting_asc" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 218px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Requirement</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 167px;" aria-label="Developer Assigned: activate to sort column ascending">Developer Assigned</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 92px;" aria-label="Tester Assigned: activate to sort column ascending">Tester Assigned</th>
                            <th class="sorting" tabindex="0" aria-controls="datatable-buttons" rowspan="1" colspan="1" style="width: 92px;" aria-label="Actions: activate to sort column ascending">Actions</th>
                    </thead>
                    <tbody style="overflow:hidden">

                        <tr role="row" class="odd" href="" dir-paginate="requirement in filteredArray = (requirements | REQFilter: filterREQ) | itemsPerPage: pageSize" current-page="currentPageREQ" pagination-id="paginationREQ">
                            <td tabindex="0" class="sorting_1" ng-click="requirementDetails(requirement.Id)">{{requirement.Axosoft_Task_Id}}</td>
                            <td tabindex="0" class="sorting_1" ng-click="requirementDetails(requirement.Id)">{{requirement.req_number}}</td>
                            <td tabindex="0" style="overflow:hidden;" class="sorting_1" ng-click="requirementDetails(requirement.Id)">{{requirement.Name}}</td>
                            <td style="overflow:hidden" ng-click="requirementDetails(requirement.Id)">{{requirement.Developer_Assigned}}</td>
                            <td style="overflow:hidden" ng-click="requirementDetails(requirement.Id)">{{requirement.Tester_Assigned}}</td>
                            <td>
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-default" type="button" data-placement="top" data-toggle="tooltip" data-original-title="Forward" aria-describedby="tooltip802045" ng-click="requirementDetails(requirement.Id)"><i class="fa fa-info-circle"></i></button>
                                    <button ng-if="CurrentUserRole!='VBP'" data-toggle="modal" data-target="#modalRequirementForm" class="btn btn-sm btn-default" type="button" data-placement="top" data-original-title="Trash" ng-click="reqSelected(requirement)"><i class="fa fa-check-square"></i></button>
                                </div>
                            </td>
                        </tr>
                        <tr ng-if="filteredArray.length===0">
                            <td colspan="6">@Resource.NoDataFound</td>
                        </tr>
                    </tbody>
                </table>
                <div class="dataTables_info" id="datatable-buttons_info" role="status" aria-live="polite">
                    {{filteredArray.length}} entries
                </div>
                <div class="paginationContainer">
                    <dir-pagination-controls boundary-links="true" pagination-id="paginationREQ" template-url="Pages/dirPagination.tpl.html"></dir-pagination-controls>
                </div>




            </div>
        </div>
        @* Here end the content*@

    </div>
</div>


<div class="modal fade" id="modalRequirementForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Enable Requirement</h3>
            </div>
            <div class="modal-body">
                <p style="overflow:hidden">Are you sure you want to enable the Requirement: {{rselected.Name}}</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-success" data-dismiss="modal" ng-click="showModalToEnable(rselected)">Enable</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>